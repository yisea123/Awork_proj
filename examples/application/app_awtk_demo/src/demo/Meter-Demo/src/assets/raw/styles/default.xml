<window>
  <style name="default">
    <normal bg_color="black" bg_image='bg'/>
  </style>
</window>

<label>
  <style name="default">
    <normal text_color="blue" font_style="bold"/>
  </style>
</label>

<image>
  <style name="border">
    <normal bg_color="#e0e0e0" border_color="#000000" text_color="black"/>
  </style>
  <style name="selectable">
    <normal text_color="black"/>
    <pressed bg_color="#e0e0e0" border_color="#000000" text_color="black"/>
    <selected bg_color="#e0e0e0" border_color="#000000" icon="check" text_color="black"/>
  </style>
</image>

